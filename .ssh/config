# Prefer ProxyCommand over ProxyJump so that it also works with really old ssh versions

Host athos
    ForwardAgent yes

Host athos_ext
    HostName athos
    ForwardAgent yes
#   ProxyJump lantea
    ProxyCommand ssh lantea -W %h:%p

Host halo
    HostName halo.minimum.se
    Port 2221
    ForwardAgent yes

Host prime
    HostName minimum.se
    ForwardAgent yes

Host hellbay
    HostName hellbay.minimum.se
    Port 2222
    ForwardAgent yes

Host lantea
    HostName b.mag32.net
    ForwardAgent yes

Host rp
    HostName localhost
    Port 8080
#    ProxyJump lantea
    ProxyCommand ssh lantea -W %h:%p
